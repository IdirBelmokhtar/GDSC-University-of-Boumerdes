<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDSCUniversityOfBoumerdes" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTitleFont">
        <item name="fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="DrawerTextFont">
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="ListItem.Clickable" parent="">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>